extends layout 

block content 

    h1 #{title}

    if (!user.admin)
        form(method='POST' action='')
            div.form-group
                label(for='passcode') Passcode: 
                input#passcode.form-control(type='password' name='passcode' required='true')
            button.btn.btn-primary(type='submit') Submit
        
        if (errors)
            ul 
                each error in errors 
                    li!=error.msg
    else
        p You are already an admin  