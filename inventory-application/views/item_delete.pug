extends layout 

block content 

    h1  #{item.name}
    p #[strong description:] #{item.description}
    p #[strong price:] #{item.price}
    p #[strong number in stock:] #{item.number_in_stock}

    p Do you want to delete this item?

    form(method ='POST' action='')
        input(type='hidden' id='id' name='id' required='true' value=item._id)
        button.btn.btn-primary(type='submit') Delete